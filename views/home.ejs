<h1>
    code socially / <%=title%>
</h1>

<section id="feed-post">
    <h4>Posts</h4>
    <%if (locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">

        <textarea name="content" placeholder="Type here..." rows="3" cols="30" required></textarea>
        <input type="submit" value="Post">

    </form>
    <%}%>
</section>

<div id="posts-container">
    <ul>
        <%for(let i of posts ){%>
            
            <p>
                
                <li>
                <%if (locals.user && locals.user.id ==i.user.id){ %>
                <small>
                    <a href="/posts/destroy/<%=i.id%>">X</a>
                </small>
                <%}%>
                <%=i.content%></li>
                <%=i.user.name%>
            </p>
            <div class="post-comments">
                <%if (locals.user){%>
                    <form action="/comments/create" method="POST">
                        <input type="text" name="content" placeholder="Enter comments" required>
                        <input type="hidden" name="postid" value="<%=i._id%>">
                        <input type="submit" value="Add comment">
                    </form>
                    
                <%}%>
                    
                
                <div class="post-comments-list">
                    <ul id="post-comments-<%=i._id %>">
                        <%for (let comment of i.comments){%>
                                
                                <P>
                                    <%if (locals.user && locals.user.id ==comment.user.id){ %>
                                        <small>
                                            <a href="/comments/destroy/<%=comment.id%>">X</a>
                                        </small>
                                    <%}%>
                                    <%=comment.content%>
                                    <br>
                                    <small>
                                        <%= comment.user.name%>
                                    </small>
                                </P>
                        <%}%>
                    </ul>
                </div>
            </div>
        
        <%}%>
    </ul>
</div>
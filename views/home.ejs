<h1>
    code socially / <%=title%>
</h1>

<section id="feed-post">
    <h4>Posts</h4>
    <%if (locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">

        <textarea name="content" placeholder="Type here..." rows="3" cols="30"></textarea>
        <input type="submit" value="Post">

    </form>
    <%}%>
</section>

<div id="posts-container">
    <ul>
        <%for(let i of posts ){%>
            <p>
                <li><%=i.content%></li>
                <%=i.user.name%></p>
            
        <%}%>
    </ul>
</div>